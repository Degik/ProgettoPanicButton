<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Messaggio">

        <EditTextPreference
            app:key="signature"
            app:title="Firma"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Permessi">

        <SwitchPreferenceCompat
            app:key="gpsTrack"
            app:title="Consenti tracciamento" />
        <SwitchPreferenceCompat
            app:key="voiceRecord"
            app:title="Consenti registrazioni"/>
        <SwitchPreferenceCompat
            app:key="cameraPhoto"
            app:title="Consenti foto"/>

    </PreferenceCategory>

</PreferenceScreen>